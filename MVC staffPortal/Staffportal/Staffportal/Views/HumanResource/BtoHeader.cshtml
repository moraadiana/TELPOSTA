@model  Staffportal.Models.HumanResource
@{
    ViewBag.Title = "Staff Leave Back to Office";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase">Leave Back to Office</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("index","dashboard")">Leave Back to Office</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="dropdown-divider"></div>
                    <form action="@Url.Action("btoheader","humanresource")" method="post">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label>Staff No</label><br />
                                <label class="text-primary">@Model.StaffNo</label>
                            </div>
                            <div class="col-md-3">
                                <label>Staff Name</label><br />
                                <label class="text-primary">@Model.StaffName</label>
                            </div>
                            <div class="col-md-3">
                                <label>Directorate</label><br />
                                <label class="text-primary">@Model.Directorate</label>
                            </div>
                            <div class="col-md-3">
                                <label>Department</label><br />
                                <label class="text-primary">@Model.Department</label>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label>Leave</label>
                                @Html.DropDownListFor(m => m.LeaveNo, new SelectList(Model.PostedLeaves, "LeaveNo", "LeaveNo"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("btolisting","humanresource")" class="btn btn-warning">Back</a>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>