@model Staffportal.Models.Approval
@{
    ViewBag.Title = "Approval Tracking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase">Approval Tracking</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("index","dashboard")">Approval Tracking</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="table-responsive text-wrap">
                        <table id="example" class="table table-striped mt-3 small">
                            <thead>
                                <tr>
                                    <th class="small">#</th>
                                    <th class="small">Entry No.</th>
                                    <th class="small">Sequence No.</th>
                                    <th class="small">Date-Time Sent for Approval</th>
                                    <th class="small">Sender Name</th>
                                    <th class="small">Approver Name</th>
                                    <th class="small">Comments</th>
                                    <th class="small">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var approval in Model.Approvals)
                                {
                                    <tr>
                                        <td>@approval.Counter</td>
                                        <td>@approval.EntryNo</td>
                                        <td>@approval.SequenceNo</td>
                                        <td>@Convert.ToDateTime(approval.DateSentForApproval).ToString("dd MMM yyyy")</td>
                                        <td>@approval.SenderId</td>
                                        <td>@approval.ApproverId</td>
                                        <td>@approval.Comments</td>
                                        <td><span class="badge bg-@approval.StatusCls">@approval.Status</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>