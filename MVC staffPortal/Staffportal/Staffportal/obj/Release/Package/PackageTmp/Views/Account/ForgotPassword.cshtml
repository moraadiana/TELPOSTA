
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="card">
    <div class="card-body">
        <!-- Logo -->
        <div class="app-brand justify-content-center">
            <img src="~/assets/img/logo/logo.png" alt="ACE logo" class="img-fluid" style="width: 58%; height: auto;" />
        </div>
        <!-- /Logo -->
        <div class="progress mt-3 mb-3">
            <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="mb-4 text-uppercase text-center text-decoration-underline">ACE Media Forgot Password</div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form id="formAuthentication" class="mb-4" action="@Url.Action("forgotpassword","account")" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" name="UserName" placeholder="P.F Number" required />
            </div>
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check"></div>
                    <div>
                        <a href="@Url.Action("index","account")" class="text-info">Back</a>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary d-grid w-100" type="submit">Forgot Password</button>
            </div>
        </form>
    </div>
</div>