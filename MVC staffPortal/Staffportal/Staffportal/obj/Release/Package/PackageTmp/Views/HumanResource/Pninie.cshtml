@model Staffportal.Models.HumanResource
@{
    ViewBag.Title = "Staff Pnine Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase">Individual P9 Form</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("index","dashboard")">Individual P9 Form</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="dropdown-divider"></div>
                    <form action="@Url.Action("pnine","humanresource")" method="post">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label">Period Year</label>
                                <input name="PeriodYear" class="form-control" placeholder="Period Year" />
                            </div>
                            <div class="col-md-3">
                                <br />
                                <button class="btn btn-success" id="view-payslip" type="submit">View</button>
                            </div>
                        </div>
                    </form>
                    <div class="dropdown-divider mt-3"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <embed src="@ViewBag.filepath" type="application/pdf" width="100%" height="500" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>