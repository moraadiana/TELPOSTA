
<div class="page-content">
    <div class="page-bar">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("index", "dashboard")">
                    <i class="fas fa-home"></i> Home
                </a>
            </li>
            <li class="breadcrumb-item active">My Profile</li>
        </ul>
    </div>

    <h1 class="page-title text-primary"><i class="fas fa-tachometer-alt"></i> My Profile</h1>

    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-body text-center">
                    @*<img src="@Url.Content("~/Profiles/" + Session["trusteeNo"] + ".png?"+ DateTime.Now.Ticks.ToString())" class="img-responsive" alt="">*@
                    <img src="@Url.Content("~/Profiles/" + Session["trusteeNo"] + ".png?" + DateTime.Now.Ticks.ToString())"
                         class="img-responsive"
                         alt="Profile Picture"
                         onerror="this.onerror=null;this.src='@Url.Content("~/Profiles/profile_m.png")';" />

                    <h4 class="text-primary">@Session["Name"]</h4>
                    <p class="text-muted"><i class="fas fa-user-tag"></i> @Session["Category"] </p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-8">
            <div class="portlet box green">
                <div class="portlet-title tabbable-line">

                    <div class="caption">
                        <i class="fa fa-user"></i>Welcome @Session["Name"]
                    </div>


                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" data-toggle="tab">Member Information</a>
                        </li>
                        <li>
                            <a href="#tab_1_2" data-toggle="tab">Change Profile</a>
                        </li>
                    </ul>
                </div>

                <div class="portlet-body">
                    <div class="tab-content">
                      
                        <div class="tab-pane active" id="tab_1_1">
                            <div class="table-scrollable">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th> Member Information </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td> Member Email: </td>
                                            <td></td>
                                            <td> @Session["Email"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Phone No: </td>
                                            <td></td>
                                            <td> @Session["PhoneNo"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Designation: </td>
                                            <td></td>
                                            <td> @Session["Designation"] </td>
                                            <td></td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_1_2">
                            <form action="@Url.Action("ChangeProfilePic","Dashboard")" method="POST" , enctype="multipart/form-data" role="form">
                                <div class="form-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@Url.Content("~/Profiles/" + Session["pensionerNo"] + ".png?"+ DateTime.Now.Ticks.ToString())" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="profilePic" required>
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green"> Submit </button>
                                    <a href="@Url.Action("index", "dashboard")" class="btn default"> Cancel </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
