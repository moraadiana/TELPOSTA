@model  IEnumerable<MembersPortal.Models.PensionBankDetails>

@{
    ViewBag.Title = "Pension Banking Request";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}


<div class="container mt-4 p-4 shadow-sm" style="background-color: #f0ffff; border-radius: 10px;">
    <h5 class="text-center mb-4 text-primary"><strong>Pension Banking Information Update</strong></h5>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Bank Name</th>
                    <th class="text-center">Account Name</th>
                    <th class="text-center">Account Number</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">@item.Bank</td>
                        <td class="text-right">@item.BankAccName</td>
                        <td class="text-right">@item.BankAccNo</td>
                        <td class="text-right">
                            <span class="badge badge-@(item.Status == "Active" ? "success" : "danger")">
                                @item.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>

    .container {
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }


    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
        font-size: 14px;
    }


    .table-hover tbody tr:hover {
        background-color: #f0f8ff;
        transition: background-color 0.3s ease-in-out;
    }

    th {
        font-size: 14px;
        font-weight: bold;
        color: #ffffff;
        background-color: #343a40;
    }

    .badge-success {
        background-color: #28a745;
        color: #fff;
    }

    .badge-danger {
        background-color: #dc3545;
        color: #fff;
    }
</style>





