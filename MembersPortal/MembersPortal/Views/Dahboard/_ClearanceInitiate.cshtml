@model MembersPortal.Models.Clearance
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<div class="container-sm">
    <div class="card">

        <div>
            @using (Html.BeginForm("SubmitClearance", "dashboard", FormMethod.Post, new { @class = "form-class" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row p-3">
                    <h4 class="text-dark text-center"><strong><i class="bi-clipboard-plus"></i> Fill The following form</strong></h4>
                    <hr />
                    <div class="row">

                        <div class="col-md-6">
                            <label class="form-label">Select Type </label>
                            @if (Model.Types != null)
                            {
                                @Html.DropDownListFor(m => m.ClearanceType, new SelectList(Model.Types, "Value", "Text"), new { @class = "form-select", required = "required" })
                            }

                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Select Benefit</label>
                            @if (Model.BenefitCodes != null)
                            {
                                @Html.DropDownListFor(m => m.BenefitCode, new SelectList(Model.BenefitCodes, "Value", "Text"), new { @class = "form-select", required = "required" })
                            }

                        </div>

                    </div>
                </div>
                <br />
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Submit
                        </button>
                    </div>
                </div>
                <br />

            }
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">
     window.onload = function () {
         var message = '@ViewBag.ErrorMessage';
         var url = '@TempData["RedirectUrl"]';
         alert(message);
         window.location.href = url;
     };
    </script>
}
@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
     window.onload = function () {
         var message = '@ViewBag.SuccessMessage';
         var url = '@TempData["RedirectUrl"]';
         alert(message);
         window.location.href = url;
     };
    </script>
}

