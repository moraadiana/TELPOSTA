
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="../assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />
    <link href="../assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
    <script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>
    <script src="../assets/pages/scripts/profile.min.js" type="text/javascript"></script>
    <script src="../assets/pages/scripts/form-samples.min.js" type="text/javascript"></script>
    <script src="../assets/pages/scripts/dashboard.min.js" type="text/javascript"></script>
}

<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("index", "dashboard")">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Dashboard</span>
            </li>
        </ul>
    </div>
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">Dashboard</h1>
    <div class="row">
       
        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-body text-center">
                   
                    <img src="@Url.Content("~/Profiles/" + Session["memberNo"] + ".png?" + DateTime.Now.Ticks.ToString())"
                         class="img-responsive"
                         alt="Profile Picture"
                         onerror="this.onerror=null;this.src='@Url.Content("~/Profiles/profile_m.png")';" />

                    <h4 class="text-primary">@Session["memberName"]</h4>
                   
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet box green">
                <div class="portlet-title tabbable-line">
                    <div class="caption">
                        <i class="fa fa-user"></i>Welcome @Session["memberName"]
                    </div>

                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" data-toggle="tab">Member Information</a>
                        </li>
                        <li>
                            <a href="#tab_1_2" data-toggle="tab">Change Profile</a>
                        </li>
                    </ul>
                </div>
               
                <div class="portlet-body">
                    <div class="tab-content">
                        <!-- PERSONAL INFO TAB -->
                        <div class="tab-pane active" id="tab_1_1">
                            <div class="table-scrollable">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th> Member Information </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td> Member Email: </td>
                                            <td></td>
                                            <td> @Session["Email"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Phone No: </td>
                                            <td></td>
                                            <td> @Session["PhoneNo"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Designation: </td>
                                            <td></td>
                                            <td> @Session["Designation"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> ID Number: </td>
                                            <td></td>
                                            <td> @Session["ID"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Date of Joining: </td>
                                            <td></td>
                                            <td> @Session["JoiningDate"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Status: </td>
                                            <td></td>
                                            <td> @Session["Status"] </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td> Balance: </td>
                                            <td></td>
                                            <td> @Session["Balance"] </td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab_1_2">
                            <form action="@Url.Action("ChangeProfilePic","Dashboard")" method="POST" , enctype="multipart/form-data" role="form">
                                <div class="form-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@Url.Content("~/Profiles/" + Session["memberNo"] + ".png?"+ DateTime.Now.Ticks.ToString())" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="profilePic" required>
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green"> Submit </button>
                                    <a href="@Url.Action("index", "dashboard")" class="btn default"> Cancel </a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>