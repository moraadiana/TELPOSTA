
@{
    ViewBag.Title = "OTP Verification";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<form class="login-form" autocomplete="off" action="@Url.Action("verifyotp","login")" method="post">
    @*<p>Please enter the OTP Code sent to your Email @Session["memberEmail"] and Phone Number @Session["PhoneNo"] to confirm login</p>*@
    <div class="alert alert-primary  text-center p-4 mt-4 ">
        <p class="mb-2 fs-5 fw-semibold">
            Please enter the OTP code sent to:
        </p>
        <p class="mb-0 fs-6">
            <strong>Email:</strong> @Session["memberEmail"]<br />
            <strong>Phone Number:</strong> @Session["PhoneNo"]
        </p>
    </div>



    <div class="form-group">
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Enter OTP Code" name="OTPCode" required style="text-transform:uppercase" />
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green pull-right"> <i class="icon-login"> Login</i></button>
        <a href="@Url.Action("index", "login")" class="btn green pull-left"><i class="icon-arrow-left"> Back</i></a>
    </div>
    <br />
</form>