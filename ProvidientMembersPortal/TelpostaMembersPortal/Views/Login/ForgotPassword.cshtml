@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<form class="login-form" autocomplete="off" action="@Url.Action("forgotpassword")" method="post">
    <p>Enter Your Email Address to Reset Password.</p>
    <div class="form-group">
        <div class="input-icon">
            <i class="icon-envelope"></i>
            <input class="form-control placeholder-no-fix" type="Text" autocomplete="off" placeholder="PF No." name="PfNo" required />
        </div>


    </div>
    <div class="form-group">
        <div class="input-icon">
            <i class="icon-envelope"></i>
            <input class="form-control placeholder-no-fix" type="Text" autocomplete="off" placeholder="Email Address" name="UserName" required />
        </div>
     </div>
        <div class="form-actions">
            <a href="@Url.Action("index", "login")" class="btn green pull-left"><i class="icon-arrow-left"> Back</i></a>
            <button type="submit" class="btn green pull-right"> <i class="icon-login"> Submit</i></</button>
        </div>
        <br />
</form>