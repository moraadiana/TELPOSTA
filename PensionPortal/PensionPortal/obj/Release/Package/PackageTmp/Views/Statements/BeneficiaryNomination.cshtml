@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Beneficiary Nomination";
}
<div class="container-fluid page-content d-flex flex-column align-items-center py-4">
    <!-- PAGE HEADER -->
    <div class="page-bar mb-4 w-100">
        <ul class="breadcrumb bg-transparent px-0">
            <li class="breadcrumb-item">
                <a href="@Url.Action("index", "dashboard")" class="text-decoration-none">Home</a>
            </li>
            <li class="breadcrumb-item active">Beneficiary Nomination Form</li>
        </ul>
    </div>

  
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }


    <!-- Life Certificate Form -->


    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Beneficiary Nomination Form</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form action="@Url.Action("SubmitBeneficiaryNomination", "Statements")" method="post" enctype="multipart/form-data">
                        <div class="row g-3">

                            @*<div class="row">*@
                            @*<div class="col-md-4">
                                    <p>Choose a file to upload (Less than 5 MB)</p>
                                </div>*@
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Submit Beneficiary Nomination Form</label> <span class="text-danger">*</span>
                                    <input type="file" name="AttachmentFile" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-upload"></i>&nbsp;Submit</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

                <!-- Display Life Certificate -->
                <div class="portlet-body text-center">
                    @if (!string.IsNullOrEmpty(ViewBag.PdfUrl))
                    {
                        <div class="row w-200 mt-12">
                            <div class="col-lg-10 mx-auto">
                                <div class="card shadow-lg border-0">

                                    <div class="card-body text-center">
                                        <div class="pdf-container">
                                            <iframe id="pdfViewer" class="w-100" height="600px" src="@ViewBag.PdfUrl"></iframe>
                                        </div>
                                        <div class="mt-3 d-flex justify-content-center gap-2">
                                            <a href="@ViewBag.PdfUrl" target="_blank" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i> View Certificate
                                            </a>
                                            <a href="@ViewBag.PdfUrl" download class="btn btn-outline-success">
                                                <i class="bi bi-download"></i> Download Certificate
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mt-4">
                            <i class="bi bi-info-circle"></i> No Life Certificate available.
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .container-fluid {
        background-color: #f8f9fa;
        padding: 20px;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }

    .card {
        border-radius: 12px;
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .card-header {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border-radius: 12px 12px 0 0;
        padding: 15px;
        font-weight: bold;
    }

    .btn-outline-primary, .btn-outline-success {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

    .btn-outline-primary:hover, .btn-outline-success:hover {
        transform: scale(1.05);
    }

    /* Ensure PDF iframe fits well */
    .pdf-container iframe {
        width: 100%;
        height: 600px;
        border: none;
    }

    /* Responsive */
    @*@media (max-width: 768px) {
        .pdf-container iframe {
            height: 400px;
        }
    }*@
</style>

