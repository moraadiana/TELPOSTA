@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Life Certificate";
}

<div class="container-fluid page-content d-flex justify-content-center">
    <!-- PAGE HEADER -->
    <div class="page-bar mb-4">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("index", "dashboard")" class="text-decoration-none">Home</a>
            </li>
            <li class="breadcrumb-item active">Life Certificate</li>
        </ul>
    </div>

    <!-- Alerts -->
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            <span>@ViewBag.Error</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span>@ViewBag.Success</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Life Certificate Section -->
    <div class="row">
        <div class="col-lg-10 mx-auto justify-content-center" width="100%">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white d-flex align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i> Life Certificate
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(ViewBag.PdfUrl))
                    {
                        <div class="pdf-container">
                            <iframe id="pdfViewer" class="" width="100%" height="800px" src="@ViewBag.PdfUrl"></iframe>
                            <p>PDF URL: @ViewBag.PdfUrl</p>

                        </div>
                        <div class="mt-3">
                            <a href="@ViewBag.PdfUrl" class="btn btn-outline-primary" target="_blank">
                                <i class="bi bi-box-arrow-up-right"></i> Open in New Tab
                            </a>
                            <a href="@ViewBag.filepath" download class="btn btn-outline-success ms-2">
                                <i class="bi bi-download"></i> Download Certificate
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class=""></i> No Life Certificate available.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .container-fluid {
        background-color: #f8f9fa;
        padding: 20px;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-header {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border-radius: 12px 12px 0 0;
        padding: 15px;
        font-weight: bold;
    }

    .btn-outline-primary, .btn-outline-success {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

        .btn-outline-primary:hover, .btn-outline-success:hover {
            transform: scale(1.05);
        }
</style>
