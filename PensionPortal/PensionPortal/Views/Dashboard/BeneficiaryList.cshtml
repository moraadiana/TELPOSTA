                        <div class="table-toolbar">
                        </div>
                        <table class="table table-striped table-hover table-bordered" id="beneficiary">
                            <thead>
                                <tr>
                                    <th> Name  </th>
                                    <th> Date of Birth </th>
                                    <th> Relationship </th>
                                    <th> Phone Number </th>
                                    <th> Email </th>

                                </tr>
                            </thead>
                            <tbody>
