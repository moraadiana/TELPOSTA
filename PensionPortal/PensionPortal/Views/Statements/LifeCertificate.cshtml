@model PensionPortal.Models.LifeCertificate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Life Certificate";
}

<div class="container-fluid page-content d-flex flex-column align-items-center py-4">
    <!-- PAGE HEADER -->
    <div class="page-bar mb-4 w-100">
        <ul class="breadcrumb bg-transparent px-0">
            <li class="breadcrumb-item">
                <a href="@Url.Action("index", "dashboard")" class="text-decoration-none">Home</a>
            </li>
            <li class="breadcrumb-item active">Life Certificate</li>
        </ul>
    </div>

    <!-- Alerts -->
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            <span>@ViewBag.Error</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span>@ViewBag.Success</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Life Certificate Section -->
    <div class="row w-100 justify-content-center">
        <div class="col-md-6">
            <form action="@Url.Action("GenerateLifeCertificate", "Statements")" method="get">
                <div class="mb-3">
                    <label for="Period" class="form-label">Period:</label>
                    @Html.DropDownListFor(m => m.Period, new SelectList(Model.LifeCertPeriods, "Period", "Period"), new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-file-earmark-text"></i> Generate Certificate
                </button>
            </form>
        </div>
    </div>

    <div class="row w-100 mt-4">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i> Life Certificate
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(ViewBag.PdfUrl))
                    {
                        <div class="pdf-container">
                            <iframe id="pdfViewer" class="w-100" height="600px" src="@ViewBag.PdfUrl"></iframe>
                        </div>
                        <div class="mt-3 d-flex justify-content-center gap-2">
                            <a href="@ViewBag.PdfUrl" download class="btn btn-outline-success">
                                <i class="bi bi-download"></i> Download Certificate
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mt-3">
                            <i class="bi bi-info-circle"></i> No Life Certificate available.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .container-fluid {
        background-color: #f8f9fa;
        padding: 20px;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }

    .card {
        border-radius: 12px;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-header {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border-radius: 12px 12px 0 0;
        padding: 15px;
        font-weight: bold;
    }

    .btn-outline-primary, .btn-outline-success {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

        .btn-outline-primary:hover, .btn-outline-success:hover {
            transform: scale(1.05);
        }
</style>
